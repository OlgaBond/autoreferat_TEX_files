@article{Roucou2004,
abstract = {The normal function of prion protein (PrP) is usually disregarded at the expense of the more fascinating role of PrP in transmissible prion diseases. However, the normal PrP may play an important role in cellular function in the central nervous system, since PrP is highly expressed in neurons and motifs in the sequence of PrP are conserved in evolution. The finding that prion null mice do not have a significant overt phenotype suggests that the normal function of PrP is of minor importance. However, the absence of PrP in cells or in vivo contributes to an increased susceptibility to oxidative stress or apoptosis-inducing insults. An alternative explanation is that the PrP normal function is so important that it is redundant. Probing into the characteristics of PrP has revealed a number of features that could mediate important cellular functions. The neuroprotective actions so far identified with PrP are initiated through cell surface signaling, antioxidant activity, or anti-Bax function. Here, we review the characteristics of the PrP and the evidence that PrP protects against neurodegeneration and neuronal cell death.},
author = {Roucou, Xavier and Gains, Malcolm and LeBlanc, Andr{\'{e}}a C},
doi = {10.1002/jnr.10864},
file = {:media/drozdovapb/441DB6652D7ED741/Work/Papers/Prions/Reviews/2004{\_}Roucou, Gains, LeBlanc{\_}Neuroprotective functions of prion protein.pdf:pdf},

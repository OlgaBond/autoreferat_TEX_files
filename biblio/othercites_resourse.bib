journal = {Proceedings of the National Academy of Sciences of the United States of America},
month = {mar},
pages = {1--6},
pmid = {25733896},
title = {{Nonsense suppression by near-cognate tRNAs employs alternative base pairing at codon positions 1 and 3.}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/25733896},
year = {2015}
}
